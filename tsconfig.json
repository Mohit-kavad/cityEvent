{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "ES6",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    // "types": [
    //   "@types/node",
    //   "@types/express",
    //   "@types/jsonwebtoken",
    //   "@types/sequelize",
    //   "@types/dotenv"
    // ],
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./spec"
    ],
    "strict": false
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts"
, "config/config.ts", "src/database/**/*.js"  ],
  "exclude": [
    "node_modules"
  ]
}